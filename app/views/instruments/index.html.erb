<h1>Instruments</h1>

<table>
  <thead>
  <tr>
    <th>Seller</th>
    <th>Title</th>
    <th>Description</th>
    <th>Model</th>
    <th>Brand</th>
    <th>Price</th>
    <th>Condition</th>
    <th>Finish</th>
    <th>Image</th>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
  <% @instruments.each do |instrument| %>
    <tr>
      <td><%= instrument.user.name %></td>
      <td><%= instrument.title %></td>
      <td><%= instrument.description %></td>
      <td><%= instrument.model %></td>
      <td><%= instrument.brand %></td>
      <td><%= instrument.price %></td>
      <td><%= instrument.condition %></td>
      <td><%= instrument.finish %></td>
      <td><img style="width: 100px; height: 100px" src="<%= instrument.image %>"/></td>
      <td><%= link_to 'Show', instrument %></td>
      <% if instrument.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_instrument_path(instrument) %></td>
        <td><%= link_to 'Destroy', instrument, method: 'delete', data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instrument', new_instrument_path %>
